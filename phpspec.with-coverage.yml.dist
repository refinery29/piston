suites:
    piston:
        namespace: Refinery29\Piston
        psr4_prefix: Refinery29\Piston

extensions:
    - PhpSpec\NyanFormattersExtension\Extension
    - PhpSpec\Extension\CodeCoverageExtension

formatter.name: nyan.cat

code_coverage:
  format:
    - html
    - clover
  output:
    html: coverage
    clover: build/logs/clover.xml
